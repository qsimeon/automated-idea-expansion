# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# NextAuth (GitHub OAuth)
# Create OAuth App: https://github.com/settings/developers
# Callback URL: http://localhost:3000/api/auth/callback/github
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
NEXTAUTH_SECRET=your_nextauth_secret_here  # Generate with: openssl rand -base64 32
NEXTAUTH_URL=http://localhost:3000

# Encryption (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY=your_64_character_hex_string_here

# Cron Job Security (generate with: openssl rand -hex 32)
CRON_SECRET=your_cron_secret_here

# App URL
NEXT_PUBLIC_URL=http://localhost:3000

# ============================================================
# AI MODELS (Required for Agent Pipeline)
# ============================================================

# OpenAI (Primary - uses gpt-4o-mini for cost efficiency)
OPENAI_API_KEY=sk-proj-xxxxx

# Anthropic (Fallback - uses claude-3-haiku for cost efficiency)
ANTHROPIC_API_KEY=sk-ant-xxxxx

# ============================================================
# PUBLISHING PLATFORMS (For Output Distribution)
# ============================================================

# GitHub (For blog posts via GitHub Pages and code repos)
GITHUB_TOKEN=ghp_xxxxx
GITHUB_USERNAME=your-username

# Mastodon (For social media posting)
MASTODON_ACCESS_TOKEN=xxxxx
MASTODON_INSTANCE_URL=https://mastodon.social

# Hugging Face (For AI image generation - free tier)
HUGGINGFACE_API_KEY=hf_xxxxx
